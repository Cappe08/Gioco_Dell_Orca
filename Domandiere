import java.io.*;
import java.util.Random;

public class Domandiere {

    private Domanda[] domande;
    private String percorsoFileDomande;

    // Costruttore
    public Domandiere(String percorsoFile) {
        this.percorsoFileDomande = percorsoFile;
        leggiFile(percorsoFile);
    }

    // Legge il file delle domande (versione base)
    public String leggiFile(String percorsoFile) {
        String contenuto = "";
        try {
            BufferedReader br = new BufferedReader(new FileReader(percorsoFile));
            String riga;
            while ((riga = br.readLine()) != null) {
                contenuto += riga + "\n";
            }
            br.close();
        } catch (IOException e) {
            System.err.println("Errore nella lettura del file domande");
        }
        return contenuto;
    }

    // Sceglie una domanda casuale
    public Domanda scegliDomanda(Domanda[] domande) {
    if (domande == null || domande.length == 0) {
        System.err.println("Nessuna domanda disponibile!");
        return null;
    }
    Random r = new Random();
    return domande[r.nextInt(domande.length)];
}

    // Setter per caricare le domande (utile dopo il parsing)
    public void setDomande(Domanda[] domande) {
        this.domande = domande;
    }

    public Domanda[] getDomande() {
        return domande;
    }
}
